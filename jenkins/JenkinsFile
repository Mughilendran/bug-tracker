pipeline {
    agent any

    stages {
        stage('unit testing backend') {
            agent{
                docker {
                    image 'golang:1.21'
                    reuseNode true
                    }
            }
            environment {
                GOCACHE = "${WORKSPACE}/.gocache"
                GOPATH = "${WORKSPACE}/go"
                PATH = "${env.PATH}:${WORKSPACE}/go/bin"
            }
            steps {
                dir('bugtracker-backend') {
                    sh 'go test -v ./...' 
                }
            }
        }
        stage('unit testing frontend') {
            agent{
                docker {
                    image 'node:20'
                    reuseNode true
                    }
            }
            steps {
                dir('bugtracker-frontend') {
                    sh '''
                    npm ci
                    npm test
                    '''
                }
            }
            post {
                always {
                    junit 'bugtracker-frontend/test-results.xml'
                }
            }
        }
    }
}
