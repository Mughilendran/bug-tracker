pipeline {
    agent any

    stages {
        stage('unit testing backend') {
            agent{
                docker {
                    image 'golang:1.21'
                    reuseNode true
                    }
            }
            environment {
                GOCACHE = "${WORKSPACE}/.gocache"
                GOPATH = "${WORKSPACE}/go"
                PATH = "${env.PATH}:${WORKSPACE}/go/bin"
            }
            steps {
                dir('bugtracker-backend') {
                    sh 'go test -v ./...' 
                }
            }
        }
    }
}
